{
  "manifest_version": 2,
  "name": "Lattes Robot",
  "author": "Renan Medina",
  "version": "1.1.7",
  "description": "A robot to download curriculum XML files from lattes website",
  "browser_action": {
    "default_icon": {                 
      "16": "icons/16.png",           
      "24": "icons/24.png",           
      "32": "icons/32.png"            
    },
    "default_title": "Lattes Robot - Controller",      
    "default_popup": "views/config-popup.html" 
  },
  "icons":{
    "16":"icons/16.png",
    "32":"icons/32.png",
    "48":"icons/48.png",
    "128":"icons/128.png"
  },
  "background": {
    "persistent": true,
    "scripts":["js/robot.js"]
  },
  "permissions":[
	  "tabs",
	  "http://lattes.cnpq.br/*",
    "https://lattes.cnpq.br/",
    "http://*/*", 
    "https://*/*",
    "storage",
    "notifications"
  ]
 }
